{% comment %}
  This is for theming the Workbench (UI).
  See: https://code.visualstudio.com/api/references/theme-color

  Colors are generically assigned using color theme agnostic naming scheme
  as follows (assuming light mode):

  | base16cs  | alias   | use                                         |
  | ----------|---------|---------------------------------------------|
  | 0         | bg_0    | default background                          |
  | 1         | bg_1    | lighter background                          |
  | 2         | bg_2    | selection background                        |
  | 3         | dim_0   | dim foreground (comments, invis chars, etc) |
  | 4         | fg_0    | lighter foreground                          |
  | 5         | fg_1    | default foreground                          |
  | 6         |         | lighter (oft unused)                        |
  | 7         |         | lightest (oft unused)                       |
  | 8         | red     |                                             |
  | 9         | orange  |                                             |
  | 10        | magenta |                                             |
  | 11        | green   |                                             |
  | 12        | cyan    |                                             |
  | 13        | blue    |                                             |
  | 14        | yellow  |                                             |
  | 15        | violet  |                                             |

  Note: Dark mode use the same base color naming scheme, with the lighter/darker
  semantics reversed.

  When this template is rendered as a partial (i.e. `{% render %}`), it assumes
  that it is injected with an array of 16 base colors as `basecs` variable.
  They should be reassigned to alias names to make them more readable.

  Also assume injection of the following variables:

  | variable | values          |
  |----------|-----------------|
  | type     | "dark", "light" |
{% endcomment %}
{%- assign bg_0 =     base16cs[0] %}
{%- assign bg_1 =     base16cs[1] %}
{%- assign bg_2 =     base16cs[2] %}
{%- assign dim_0 =    base16cs[3] %}
{%- assign fg_0 =     base16cs[4] %}
{%- assign fg_1 =     base16cs[5] %}
{%- assign red =      base16cs[8] %}
{%- assign orange =   base16cs[9] %}
{%- assign magenta =  base16cs[10] %}
{%- assign green =    base16cs[11] %}
{%- assign cyan =     base16cs[12] %}
{%- assign blue =     base16cs[13] %}
{%- assign yellow =   base16cs[14] %}
{%- assign violet =   base16cs[15] -%}

{%- if type == "dark" -%}
  {% assign active_color = blue -%}
  {% assign border_color = cyan -%}
{% else -%}
  {% assign active_color = yellow -%}
  {% assign border_color = orange -%}
{% endif -%}

{
  // Base colors
  "foreground": "#{{ fg_1 }}",
  "disabledForeground": "#{{ dim_0 }}",
  "focusBorder": "#{{ border_color }}99",
  "selection.background": "#{{ bg_2 }}",

  // Button control
  "button.background": "#{{ active_color }}",

  // Dropdown control
  "dropdown.background": "#{{ bg_1 }}",
  "dropdown.border": "#{{ orange }}",

  // Input control
  "input.background": "#{{ bg_2 }}",
  "input.border": "#{{ dim_0 }}4A",
  "input.foreground": "#{{ fg_0 }}",
  "input.placeholderForeground": "#{{ dim_0 }}",
  "inputOption.activeBorder": "#{{ border_color }}99",
  "inputValidation.errorBackground": "#{{ red }}99",
  "inputValidation.errorBorder": "#{{ red }}4A",
  "inputValidation.warningBackground": "#{{ yellow }}99",
  "inputValidation.warningBorder": "#{{ yellow }}4A",
  "inputValidation.infoBackground": "#{{ cyan }}99",
  "inputValidation.infoBorder": "#{{ cyan }}4A",

  // Badge
  "badge.background": "#{{ active_color }}AA",

  // Progress bar
  "progressBar.background": "#{{ active_color }}",

  // Lists and trees
  "list.activeSelectionBackground": "#{{ active_color }}88",
  "list.inactiveSelectionBackground": "#{{ bg_2 }}",
  "list.focusBackground": "#{{ active_color }}66",
  "list.hoverBackground": "#{{ active_color }}44",
  "list.highlightForeground": "#{{ active_color }}",

  // Activity Bar
  "activityBar.background": "#{{ bg_2 }}",
  "activityBar.foreground": "#{{ fg_1 }}",
  "activityBarBadge.background": "#{{ active_color }}AA",

  // Side Bar
  "sideBar.background": "#{{ bg_1 }}",
  "sideBar.foreground": "#{{ fg_1 }}",
  "sideBarTitle.foreground": "#{{ fg_1 }}",

  // Editor Groups & Tabs
  "editorGroup.border": "#{{ fg_0 }}",
  "editorGroup.dropBackground": "#{{ border_color }}AA",
  "editorGroupHeader.tabsBackground": "#{{ bg_2 }}",
  "editorGroupHeader.tabsBorder": "#{{ bg_2 }}",
  "editorGroupHeader.border": "#{{ bg_2 }}",
  "tab.border": "#{{ dim_0 }}",
  "tab.activeBackground": "#{{ bg_0 }}",
  "tab.inactiveForeground": "#{{ fg_0 }}",
  "tab.inactiveBackground": "#{{ bg_2 }}",
  "tab.activeModifiedBorder": "#{{ active_color }}",
  "tab.activeBorderTop": "#{{ active_color }}",

  // Editor colors
  "editor.background": "#{{ bg_0 }}",
  "editor.foreground": "#{{ fg_1 }}",
  "editor.lineHighlightBackground": "#{{ bg_1 }}",
  "editor.selectionBackground": "#{{ bg_1 }}",
  "editorCursor.background": "#{{ bg_1 }}",
  "editorCursor.foreground": "#{%- if type == "dark" %}{{ blue }}{% else %}{{ orange }}{% endif -%}",
  "editorIndentGuide.background1": "#{{ fg_0 }}80",
  "editorIndentGuide.activeBackground1": "#{{ active_color }}80",
  "editorLineNumber.activeForeground": "#{{ fg_0 }}",
  "editorLineNumber.foreground": "#{{ dim_0 }}",
  "editorWhitespace.foreground": "#{{ dim_0 }}AA",

  // Editor widget colors
  "editorWidget.background": "#{{ bg_1 }}",
  "editorHoverWidget.background": "#{{ bg_1 }}",
  "editorStickyScroll.background": "#{{ bg_1 }}",
  "editorStickyScrollHover.background": "#{{ dim_0 }}30",

  // Notebook colors
  "notebook.editorBackground": "#{{ bg_0 }}",
  "notebook.cellEditorBackground": "#{{ bg_1 }}",

  // Peek view colors
  "peekViewEditor.background": "#{{ bg_1 }}",
  "peekViewEditor.matchHighlightBackground": "#{{ violet }}40",
  "peekViewResult.background": "#{{ bg_1 }}",
  "peekViewTitle.background": "#{{ bg_1 }}",
  "peekView.border": "#{{ active_color }}",

  // Title Bar colors
  "titleBar.activeBackground": "#{{ bg_1 }}",

  // Panel colors
  "panel.border": "#{{ fg_0 }}",

  // Status Bar colors
  "statusBar.foreground": "#{{ fg_1 }}",
  "statusBar.background": "#{{ bg_1 }}",
  "statusBar.debuggingBackground": "#{{ bg_1 }}",
  "statusBar.noFolderBackground": "#{{ bg_1 }}",
  "statusBarItem.remoteBackground": "#{{ active_color }}",
  "statusBarItem.prominentBackground": "#{{ bg_0 }}",
  "statusBarItem.prominentHoverBackground": "#{{ bg_2 }}99",
  "statusBarItem.errorBackground": "#{{ red }}",
  "statusBarItem.warningBackground": "#{{ yellow }}",

  // Debug colors
  "debugToolBar.background": "#{{ bg_1 }}",
  "debugExceptionWidget.background": "#{{ bg_1 }}",
  "debugExceptionWidget.border": "#{{ red }}",

  // Quick picker colors
  "pickerGroup.border": "#{{ border_color }}99",
  "pickerGroup.foreground": "#{{ border_color }}99",

  // Extensions
  "extensionButton.prominentBackground": "#{{ active_color }}",
  "extensionButton.prominentHoverBackground": "#{{ orange }}AA",

  // Integrated Terminal colors
  "terminal.background": "#{{ bg_0 }}",
  "terminal.foreground": "#{{ fg_1 }}",
  "terminal.selectionBackground": "#{{ bg_1 }}",
  "terminalCursor.background": "#{{ bg_1 }}",
  "terminalCursor.foreground": "#{{ fg_0 }}",
  "terminal.ansiBlack": "#{{ bg_1 }}",
  "terminal.ansiRed": "#{{ red }}",
  "terminal.ansiGreen": "#{{ green }}",
  "terminal.ansiYellow": "#{{ yellow }}",
  "terminal.ansiBlue": "#{{ blue }}",
  "terminal.ansiMagenta": "#{{ magenta }}",
  "terminal.ansiCyan": "#{{ cyan }}",
  "terminal.ansiWhite": "#{{ fg_0 }}",
  "terminal.ansiBrightBlack": "#{{ bg_0 }}",
  "terminal.ansiBrightRed": "#{{ orange }}",
  "terminal.ansiBrightGreen": "#{{ green }}",
  "terminal.ansiBrightYellow": "#{{ yellow }}",
  "terminal.ansiBrightBlue": "#{{ blue }}",
  "terminal.ansiBrightMagenta": "#{{ violet }}",
  "terminal.ansiBrightCyan": "#{{ blue }}",
  "terminal.ansiBrightWhite": "#{{ fg_1 }}",

  // Welcome page colors
  "welcomePage.background": "#{{ bg_0 }}",
  "welcomePage.tileBackground": "#{{ bg_1 }}",
  "welcomePage.progress.background": "#{{ bg_2 }}",
  "welcomePage.progress.foreground": "#{{ active_color }}",
  "walkThrough.embeddedEditorBackground": "#{{ bg_0 }}",

  // Text colors
  "textBlockQuote.background": "#{{ bg_1 }}",
  "textCodeBlock.background": "#{{ bg_1 }}",
  "textPreformat.background": "#{{ bg_1 }}",

  // Settings Editor colors
  "settings.textInputBackground": "#{{ bg_2 }}",
  "settings.numberInputBackground": "#{{ bg_2 }}",
  "settings.checkboxBackground": "#{{ bg_2 }}",
  "settings.dropdownBackground": "#{{ bg_2 }}"
}
