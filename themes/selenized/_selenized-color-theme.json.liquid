{%- assign colors = colors | map: "srgb_hex" -%}

{
  "name": "Selenized {{ type | capitalize }}",
  "type": "{{ type }}",

  // Workbench (UI) colors
  "colors": {% render
    "workbench-colors.json.liquid",
    type: type,
    base00: colors[0],
    base01: colors[1],
    base02: colors[2],
    base03: colors[3],
    base04: colors[4],
    base05: colors[5],
    base06: colors[6],
    base07: colors[7],
    base08: colors[8],
    base09: colors[9],
    base0a: colors[10],
    base0b: colors[11],
    base0c: colors[12],
    base0d: colors[13],
    base0e: colors[14],
    base0f: colors[15],
  %},

  // TextMate scoped token highlight colors (fallback)
  "tokenColors": {% render
    "token-colors.json.liquid",
    base00: colors[0],
    base01: colors[1],
    base02: colors[2],
    base03: colors[3],
    base04: colors[4],
    base05: colors[5],
    base06: colors[6],
    base07: colors[7],
    base08: colors[8],
    base09: colors[9],
    base0a: colors[10],
    base0b: colors[11],
    base0c: colors[12],
    base0d: colors[13],
    base0e: colors[14],
    base0f: colors[15],
  %},

  // Semantic token (LSP-provided) colors
  // TODO
  "semanticHighlighting": true,
  "semanticTokenColors": {% render "semantic-token-colors.json.liquid" %}
}
